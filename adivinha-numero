<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Jogo de Adivinhação</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #e0f7fa; /* Azul claro */
            color: #004d40; /* Verde marinho */
            text-align: center;
            padding: 0;
            margin: 0;
        }
        h1 {
            color: #004d40; /* Verde marinho */
            margin-top: 20px;
        }
        p {
            font-size: 18px;
        }
    </style>
    <script>
        function sorteio(min, max) {
            return Math.floor(Math.random() * (max - min + 1)) + min;
        }

        window.onload = function() {
            alert("Olá, Vamos nos divertir? Aperte enter para prosseguir.");
            
            const nome = prompt("Digite seu nome:");
            const min = parseInt(prompt(`${nome}, digite o valor mínimo desejado:`));
            const max = parseInt(prompt(`${nome}, digite o valor máximo desejado:`));
            let chances = parseInt(prompt("Quantas chances você quer ter?"));
            
            // Validação
            if (isNaN(min) || isNaN(max) || isNaN(chances) || min >= max || chances <= 0) {
                alert("Entrada inválida. Recarregue a página e insira valores válidos.");
                return;
            }

            const numeroSorteado = sorteio(min, max);

            while (chances > 0) {
                const chute = parseInt(prompt(`Digite seu chute, entre ${min} e ${max}:`));

                if (isNaN(chute) || chute < min || chute > max) {
                    alert(`Chute inválido. Digite um número entre ${min} e ${max}.`);
                    continue;
                }

                if (chute === numeroSorteado) {
                    alert("Você acertou o número! Parabéns!");
                    break;
                } else if (chute > numeroSorteado) {
                    alert("Você errou! O número sorteado é menor que o seu chute. Tente novamente.");
                } else {
                    alert("Você errou! O número sorteado é maior que o seu chute. Tente novamente.");
                }

                chances--;
                if (chances > 0) {
                    alert(`Você ainda tem ${chances} chances.`);
                }
            }

            if (chances === 0) {
                alert(`Que pena, você não conseguiu acertar! O número que eu havia pensado era ${numeroSorteado}. Tente novamente recarregando a página.`);
            }
        };
    </script>
</head>
<body>
    <h1>Bem-vindo ao Jogo de Adivinhação!</h1>
    <p>Recarregue a página para jogar novamente.</p>
</body>
</html>
